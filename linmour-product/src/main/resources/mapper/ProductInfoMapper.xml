<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linmour.product.mapper.ProductInfoMapper">

    <resultMap id="BaseResultMap" type="com.linmour.product.pojo.Do.ProductInfo">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="intro" column="intro" jdbcType="VARCHAR"/>
            <result property="price" column="price" jdbcType="DECIMAL"/>
            <result property="spec" column="spec" jdbcType="TINYINT"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
            <result property="picture" column="picture" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="deleted" column="deleted" jdbcType="TINYINT"/>
            <result property="createBy" column="create_by" jdbcType="BIGINT"/>
            <result property="updateBy" column="update_by" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,intro,
        price,spec,status,
        picture,create_time,update_time,
        deleted,create_by,update_by
    </sql>

    <select id="getSort" resultType="java.lang.String">
        SELECT b.sort from product_info a , product_sort b WHERE a.id = #{id} AND a.sort_id = b.id
    </select>
    <select id="getspecId" resultType="com.linmour.product.pojo.Do.ProductSpec">
        SELECT c.taste, c.size
        FROM product_spec c
                 JOIN r_product_spec b ON c.id = b.spec_id
                 JOIN product_info a ON a.id = b.product_id
        WHERE a.id = #{id} AND a.spec = 1;
    </select>
    <select id="getsize" resultType="com.linmour.product.pojo.Do.ProductSize">
        SELECT b.options , b.price,b.status,b.id FROM r_product_size a JOIN product_size b ON a.size_id = b.id  WHERE
            a.product_id = #{id}
    </select>
    <select id="gettaste" resultType="com.linmour.product.pojo.Do.ProductTaste">
        SELECT b.options,b.id,b.status FROM r_product_taste a JOIN product_taste b ON a.taste_id = b.id  WHERE
            a.product_id = #{id}
    </select>
</mapper>
