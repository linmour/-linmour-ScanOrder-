<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linmour.product.mapper.ProductTasteMapper">

    <resultMap id="BaseResultMap" type="com.linmour.product.pojo.Do.ProductTaste">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="options" column="options" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="createBy" column="create_by" jdbcType="BIGINT"/>
            <result property="updateBy" column="update_by" jdbcType="BIGINT"/>
            <result property="deleted" column="deleted" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,option,create_time,
        update_time,create_by,update_by,
        deleted
    </sql>
    <delete id="deleteTaste">
        DELETE a,b FROM r_product_taste a JOIN product_taste b ON a.taste_id = b.id  WHERE
            a.product_id = #{productId}
    </delete>
</mapper>
